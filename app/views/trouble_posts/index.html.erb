<p>新規投稿</p>
<%= form_with model: @trouble_post, local: true do |f| %>
  <p>投稿<%= f.text_field :content, required: true %></p>
  <%= f.submit "送信" %>
<% end %>

<% @trouble_posts.each do |trouble_post| %>
  <p>
    <%= trouble_post.user.username %>
    <%= trouble_post.content %>
    <% if current_user.id == trouble_post.user.id %>
      <%= link_to "削除", trouble_post, method: :delete, data: { confirm: "削除しますか?" } %>
    <% end %>
    <hr>
  </p>
<% end %>